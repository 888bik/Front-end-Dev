/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.container {
  padding: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.input, .textarea {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
}

.radio-group {
  display: flex;
  gap: 20rpx;
}

.radio {
  display: flex;
  align-items: center;
  position: relative;
}

.radio-circle {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #ddd;
  margin-right: 10rpx;
}

.radio-circle.active {
  background-color: #07c160;
  border-color: #07c160;
}

.hobby-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.hobby-item {
  display: flex;
  align-items: center;
}

.submit-btn {
  background-color: #07c160;
  color: white;
  margin-top: 50rpx;
}

/* 头像样式 */
.avatar-container {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.preview-avatar {
  width: 100%;
  height: 100%;
  margin-top: 10rpx;
}

/* 学生列表样式 */
.student-list {
  margin-top: 20rpx;
}

.student-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.avatar-container {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.age, .gender {
  font-size: 28rpx;
  color: #666;
}

.actions {
  display: flex;
  gap: 10rpx;
}

.edit-btn, .delete-btn {
  font-size: 24rpx;
  padding: 0 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #07c160;
  color: white;
  border-radius: 4rpx;
}

.delete-btn {
  background-color: #f56c6c;
}
